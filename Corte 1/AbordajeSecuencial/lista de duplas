################# LISTAS ####################
############################################

# Definimos una lista con colores
my_lista = ['Rojo', 'Azul', 'Amarillo', 'Naranja', 'Violeta', 'Verde']

# Muestra toda la lista
print(my_lista)

# Muestra el tipo de dato (list)
print(type(my_lista))

# Accede al elemento con índice 2 → "Amarillo"
print(my_lista[2])

# Tamaño de la lista con len()
print("my_lista size: ", len(my_lista))

# Muestra una porción de la lista [inicio:fin) → elementos en posición 0 y 1
print(my_lista[0:2])

# Equivalente a lo anterior, desde el inicio hasta el índice 2 (excluido)
print(my_lista[:2])

# Agregar un nuevo color al final de la lista
my_lista.append('Blanco')
print(my_lista)

# Insertar un elemento en la posición 3
my_lista.insert(3, 'Negro')
print(my_lista)

# Extender la lista concatenando otra lista
my_lista.extend(['Marron', 'Gris'])
print(my_lista)

# Obtener el índice de un elemento
print(my_lista.index('Azul'))

# Eliminar un elemento (si no existe lanza error)
# my_lista.remove('Magenta')  #  Da error porque no está en la lista
my_lista.remove('Marron')      # Elimina el primer 'Marron'
print(my_lista)

# Insertar nuevamente 'Marron' en la posición 8
my_lista.insert(8, 'Marron')
print(my_lista)

# Elimina y retorna el último elemento de la lista
print(my_lista.pop())

# Tamaño actualizado de la lista
size = len(my_lista)
print("size = ", size)

# Repetir la lista 3 veces
my_lista_3 = my_lista * 3
print("my_lista_3: ", my_lista_3)

# Ordenar lista de forma ascende

